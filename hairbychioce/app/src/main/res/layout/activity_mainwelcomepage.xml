<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flowerblue"
    tools:context=".MainActivity_Welcome_Page">

    <TextView
        android:id="@+id/nameDisplay"
        android:layout_width="114dp"
        android:layout_height="36dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="228dp"
        android:text="TextView"
        android:background="#bce6e3"
        android:textColor="#201E1E"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ageDisplay"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="228dp"
        android:text="TextView"
        android:background="#bce6e3"
        android:textColor="#242020"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="218dp"
        android:layout_height="63dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="132dp"
        android:background="#EEBABA"
        android:fontFamily="monospace"
        android:gravity="center"
        android:shadowColor="#1B1919"
        android:text="Welcome"
        android:textColor="#0F0D0D"
        android:textColorHint="#1B1A1A"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        tools:srcCompat="@drawable/hands" />

</androidx.constraintlayout.widget.ConstraintLayout>